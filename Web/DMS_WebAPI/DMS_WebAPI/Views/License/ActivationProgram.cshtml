@model DMS_WebAPI.Models.ActivationProgramViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .img-center {
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("ActivationProgram", "License", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ProgramCode)
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <a href="/">
                            <img src="~/Content/default-logo.png" alt="default-logo" class="img-responsive img-center" />
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="text-center text-danger">
                            Данная версия программы не лецензионная!
                        </div>
                        <div class="text-center text-danger">
                            Необходимо ввести код активации.
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="text-center">
                            @Html.LabelFor(m => m.ProgramCode)
                        </div>
                        <div class="text-center">
                            @Html.DisplayFor(m => m.ProgramCode)
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <div class="text-center">
                            @Html.LabelFor(m => m.ActivationCode)
                        </div>
                        <div class="text-center">
                            @Html.TextBoxFor(m => m.ActivationCode, new { @class = "form-control", style = "display: initial;" })
                        </div>
                        <div class="text-center">
                            @Html.ValidationMessageFor(m => m.ActivationCode, null, htmlAttributes: new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <div class="text-center">
                            <input type="submit" class="btn btn-default" value="Активировать" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
